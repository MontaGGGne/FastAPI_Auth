def s3_post_signature(s3_session, bucket, key):
    return s3_session.generate_presigned_post( 
        Bucket=bucket, 
        Key=key, 
        Conditions=None, 
        ExpiresIn=3600
    )

def s3_get_signature(s3_session, bucket, key):
    return s3_session.generate_presigned_url(
        "get_object",
        Params={
                "Bucket": bucket,
                "Key": key
            },
        ExpiresIn=3600
    )